---
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];
const { title, description, pubDate } = Astro.props;

const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": title,
  "description": description,
  "keywords": ["programming", "tech", "linux", "learning"],
  "author": {
    "@type": "Person",
    "name": "Yusuf Bouzekri",
    "url": "https://yusuf.fyi"
  },
  /* the schema expects Date or DateTime using ISO 8601 format. For Date that is yyyy-MM-dd */
  "datePublished": pubDate.toISOString().substring(0, 10),
};
---

<script type="application/ld+json" is:inline set:html={JSON.stringify(schema)} />
