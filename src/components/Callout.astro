---
const props = Astro.props;
---

<div class="-mt-5 mb-5">
  {
    props.title ? (
      <div class="bg-amber-950 select-none px-2 text-white w-fit p-1 rounded-lg font-smallcaps relative left-7 font-bold top-4  ">
        {props.title}
      </div>
    ) : null
  }
  <div
    class="[&>p]:!text-lg text-lg bg-orange-50 [&>p]:font-serif border-2 border-amber-950 px-5 pt-5 pb-3 rounded-lg"
  >
    <slot />
  </div>
</div>
