---
const props = Astro.props;

const attributes = !props.title && { "data-hasNoTitle": "T" };
---

<div class="-mt-5 mb-5">
  {
    props.title ? (
      <div class="bg-amber-950 select-none px-2 text-white w-fit p-1 rounded-lg font-smallcaps relative left-7 font-bold top-4  ">
        {props.title}
      </div>
    ) : null
  }
  <div
    {...attributes}
    class="[&>p]:!text-lg data-[hasnotitle=T]:!top-2 data-[hasnotitle=T]:relative text-lg bg-orange-50 [&>p]:font-serif border-2 border-amber-950 px-5 pt-5 pb-3 rounded-lg"
  >
    <slot />
  </div>
</div>
