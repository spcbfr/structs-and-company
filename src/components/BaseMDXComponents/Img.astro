---
const props = Astro.props;
import { Image } from "astro:assets";
import { cn } from "../../utils.ts";
---

<figure class={cn("md:-mx-5", props.class)}>
	<Image
		src={props.src}
		alt={props.alt}
		quality="100"
		class={"rounded-md border-[3px] border-white shadow-stone-300"}
		height={500}
		width={800}
	/>
	<figcaption class="my-2 text-center text-stone-500">
		{props.caption}
	</figcaption>
</figure>
