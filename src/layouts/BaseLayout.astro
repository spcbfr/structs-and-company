---
import BaseHead from "../components/BaseHead.astro";

import Footer from "../components/Footer.astro";
interface Props {
  title: string;
  description: string;
  ogImage?: string;
}
const props = Astro.props;
---

<!doctype html>
<html lang="en">
  <BaseHead {...props} />
  <body class="flex flex-col items-center justify-center bg-[#faf9f5]">
    <main class="2xl:w-1/3 pb-10 flex-grow lg:w-1/2 md:w-3/4 w-5/6 font-serif">
      <slot />
      <Footer />
    </main>
  </body>
</html>
